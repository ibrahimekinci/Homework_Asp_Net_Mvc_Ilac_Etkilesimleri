@model ilac_etkilesimleri.Models.IlacViewModel

@{
    ViewBag.process = Model.Ad;
    ViewBag.Title = "İlaç";
}
<div class="box">
    <div class="box-header">
        <h3 class="box-title"><b>Etken Madde</b> </h3>
        <h3>@Html.DisplayFor(model => model.Ad)</h3>
    </div>
    <div class="box-header">
        <h3 class="box-title"> <b>@Html.DisplayNameFor(model => model.Aciklama)</b></h3>
        <p>
            @Html.Raw(Model.Aciklama)
        </p>
    </div>
    <div class="box-header">
        <h3 class="box-title"> <b>@Html.DisplayNameFor(model => model.YanEtkiler)</b></h3>
        <p>
            @Html.Raw(Model.YanEtkiler)
        </p>
    </div>
    <div class="box-header">
        <h3 class="box-title"> <b>@Html.DisplayNameFor(model => model.NasilKullanilir)</b></h3>
        <p>
            @Html.Raw(Model.NasilKullanilir)
        </p>
    </div>
    <div class="box-header">
        <h3 class="box-title"> <b>@Html.DisplayNameFor(model => model.DikkatEdilecekler)</b></h3>
        <p>
            @Html.Raw(Model.DikkatEdilecekler)
        </p>
    </div>
    <div class="box-header">
        <h4 class="box-title Bold"><b>Etkileşimde Bulunduğu Etken Maddeler</b></h4>
    </div>
    @if (Model.EtkenMaddeler != null && Model.EtkenMaddeler.Count > 0)
    {

        foreach (var item in Model.EtkenMaddeler)
        {
            <div class="box box-default collapsed-box">
                <div class="box-header with-border">
                    <h3 class="box-title">@item.Ad</h3>

                    <div class="box-tools pull-right">
                        <a class="btn btn-box-tool" href="@Url.Action("Details","EtkenMadde", new { id = item.Id })">
                            <i class="fa fa-external-link-square"></i>
                        </a>
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-plus"></i>
                        </button>

                    </div>
                    <!-- /.box-tools -->
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @Html.Raw(item.Aciklama)
                </div>
                <!-- /.box-body -->
            </div>
        }

    }
    else
    {
        <span>Etkilesen madde eklenmemiştir.</span>
    }

</div>
<p>
    @Html.ActionLink("Düzenle", "Edit", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-block btn-primary btn-lg" })
    @Html.ActionLink("Listeye Geri Dön", "Index", null, htmlAttributes: new { @class = "btn btn-block btn-warning btn-lg" })
</p>
