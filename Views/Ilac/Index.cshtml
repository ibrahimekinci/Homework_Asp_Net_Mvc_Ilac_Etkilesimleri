@model IEnumerable<ilac_etkilesimleri.Models.IndexListViewModels>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr class="col-md-10">
        <th class="col-md-8">
            @Html.DisplayNameFor(model => model.Ad)
        </th>
        <th class="col-md-2">
            @Html.DisplayName("İşlemler")
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr class="col-md-10">
            <td class="col-md-8">
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td class="col-md-2">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
